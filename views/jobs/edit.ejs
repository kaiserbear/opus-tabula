<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= job.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/jobs/<%= job._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="job[name]" value="<%= job.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="job[image]" value="<%= job.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="job[description]" value="<%= job.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/jobs">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

